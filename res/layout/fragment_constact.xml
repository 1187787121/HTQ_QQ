<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" 
    >
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
     <LinearLayout
        android:id="@+id/serach"
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/acm_inputbox"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerVertical="true">

       <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/search"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="#818181" />
		
        <EditText
          
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            />
    </LinearLayout>

</RelativeLayout>
 <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
             android:background="@color/devide_line"/>
   <LinearLayout 
      
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="horizontal" 
         android:paddingTop="7dp"
         android:paddingBottom="7dp"
        >
    <RelativeLayout
     android:layout_marginLeft="30dp"
     android:layout_width="0dp"
     android:layout_weight="1"
     android:layout_height="wrap_content"
     android:orientation="vertical" 
    >
        
    <ImageView 
       
        android:id="@+id/friend_entry"
        android:src="@+drawable/friend_entry"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/qq"
        android:layout_below="@id/friend_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="QQ好友"/>
    </RelativeLayout>
       <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
    android:layout_height="wrap_content"
    >
           <ImageView 
        android:id="@+id/iv_tongxinlu"
        android:src="@+drawable/tongxinlu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tongxinlu"
        android:paddingLeft="5dp"
        android:layout_below="@id/iv_tongxinlu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textColor="#000000"
          android:layout_centerVertical="true"
        android:text="通信录"/>
          
     </RelativeLayout>
      <RelativeLayout
      android:id="@+id/fragment_contact_group_relative"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
   
    >
        <ImageView 
      
        android:id="@+id/iv_qunzu"
        android:src="@+drawable/qunzu"
         android:layout_width="50dp"
        android:layout_height="50dp"
        
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/qunzu"
        android:layout_below="@id/iv_qunzu"
         android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textColor="#000000"
          android:layout_centerVertical="true"
        android:text="群组"/>
          
      </RelativeLayout>
    <RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    >
             <ImageView 
        android:id="@+id/iv_taolunzu"
        android:src="@+drawable/taolunzu"
         android:layout_width="50dp"
        android:layout_height="50dp"
        
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/taolunzu"
        android:paddingLeft="5dp"
        android:layout_below="@id/iv_taolunzu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:text="讨论组"/>
     </RelativeLayout>
    
    </LinearLayout>
     <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CBCED2" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   
     <TextView
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:gravity="bottom"
    android:text="好友分组"/>
      <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#CBCED2" />
<ExpandableListView
    android:id="@+id/expandlist"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawSelectorOnTop="false"
 >
    </ExpandableListView>
    </LinearLayout>
</LinearLayout>